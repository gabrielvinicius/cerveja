<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_line_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/item_Editar"
        tools:text="Line 1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/item_Editar"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:id="@id/item_Editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/main_line_delete"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/delete_view"
        android:padding="16dp"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_toLeftOf="@+id/main_line_delete" />

    <ImageButton
        android:id="@id/main_line_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/delete_view"
        android:padding="16dp"
        android:src="@android:drawable/ic_menu_delete" />

</RelativeLayout>