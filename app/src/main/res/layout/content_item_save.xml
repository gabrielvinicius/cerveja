<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="br.edu.ifba.gabrielvinicius.cerveja.MainActivity"
       >

        <AutoCompleteTextView
            android:id="@+id/itemSuperMercado"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite o nome do Super Mercado"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" />


        <AutoCompleteTextView
            android:id="@+id/itemMarca"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite o nome da Marca"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/itemSuperMercado"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" />

        <AutoCompleteTextView
            android:id="@+id/itemCerveja"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite o nome da Cerveja"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/itemMarca"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" />
        <AutoCompleteTextView
            android:id="@+id/itemVolume"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite o nome do Volume"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/itemCerveja"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/itemVolumeMl"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite a quantidade ML"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/itemVolume"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" />
        <AutoCompleteTextView
            android:id="@+id/itemPreço"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite o preço"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/itemVolumeMl"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnCancelar_Item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="300dp"
            android:layout_marginRight="300dp"
            android:text="Cancelar"
            app:layout_constraintTop_toBottomOf="@+id/itemPreço"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSalvar_Item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="Salvar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/btnCancelar_Marca"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemPreço"
            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>
